{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@styles/*": ["./src/styles/*"],
      "@utils/*": ["./src/utils/*"],
      "@posts/*": ["./src/pages/posts/*"],
      "@images/*": ["./src/assets/images/*"]
    },
    "strict": true
  }
}
