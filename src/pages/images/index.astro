---
import { Image, Picture } from 'astro:assets';
import MainLayout from '@layouts/MainLayout.astro';

import post05Img from '@images/post-05.png';
---

<MainLayout title="Imágenes">
  <h1 class="text-3xl text-white">Imágenes</h1>

  <img
    loading="eager"
    src="/assets/images/post-05.png"
    width="250px"
    height="250px0"
    alt="Imagen post 5"
  />

  <Image src={post05Img} width="250" height="250" alt="Image post 05" />
  <Image
    src={post05Img}
    style={{
      width: '250px',
      height: '250px',
    }}
    width="500"
    height="500"
    alt="Image post 05"
  />

  <h1 class="text-3xl text-white">Quality low</h1>
  <Image
    quality="low"
    src={post05Img}
    width="250"
    height="250"
    alt="Image post 05"
  />

  <h1 class="text-3xl text-white">Quality heigh</h1>
  <Image
    quality="high"
    src={post05Img}
    width="250"
    height="250"
    alt="Image post 05"
  />

  <h1 class="text-3xl text-white">Formato avif</h1>
  <Image
    format="avif"
    src={post05Img}
    width="250"
    height="250"
    alt="Image post 05"
  />

  <h1 class="text-3xl text-white">Formato png</h1>
  <Image
    format="png"
    src={post05Img}
    width="250"
    height="250"
    alt="Image post 05"
  />
  <h1 class="text-3xl text-white">Formato webp</h1>
  <Image
    format="webp"
    src={post05Img}
    width="250"
    height="250"
    alt="Image post 05"
  />

  <h1 class="text-3xl text-white">Formatos con Picture</h1>
  <h2 class="text-2xl text-gray-500">Picture = image con esteroides array de formatos</h2>
  <Picture
    formats={['webp', 'avif', 'jpg']}
    src={post05Img}
    width="250"
    height="250"
    alt="Image post 05"
  />

  <h1 class="text-3xl text-white">Formatos con Picture</h1>
  <h2 class="text-2xl text-gray-500">Picture = image con esteroides sizes</h2>
  <!-- formats={['webp', 'avif', 'jpg']} -->
  <Picture
    src={post05Img}
    widths={[240, 540, 720, post05Img.width]}
    sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05Img.width}px`}

    width="250"
    height="250"
    alt="Image post 05"
  />

  <div style="height: 3000px;"></div>
  <img
    loading="lazy"
    src="/assets/images/post-05.png"
    alt="imagen post 5"
    width="250px"
    height="250px0"
  />
</MainLayout>
